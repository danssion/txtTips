[[[[[[ log server ]]]]]]
mkdir -p /data/log/nginx
chown root:dev -R /data/log /opt/modules
chmod 0775 -R /opt/modules
#update profile
PHP_HOME=/opt/modules/php
NGINX_HOME=/opt/modules/nginx

PATH=$NGINX_HOME/sbin:$PHP_HOME/bin:$PHP_HOME/sbin:$PATH
export PATH




